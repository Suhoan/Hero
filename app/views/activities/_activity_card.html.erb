<%= link_to activity_path(activity) do %>
<div>
  <div>
    <img src="<%= activity.photo_url %>", alt="photo of <%= activity.title %>" style="width: 180px">
  </div>
  <div class="mb-3 mx-3">
    <p><%= activity.title %></p>
    <% if user_signed_in? %>
      <p><%= activity.distance_to([current_user.latitude, current_user.longitude]).round(1) %> mi</p>
    <% end %>
  </div>
  <%= link_to like_activity_path(activity) do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>
</div>
<% end %>
