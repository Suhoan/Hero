<div class="custom-container categories-container">
  <div class="row">
    <div class="col-md-12 categories-headinfo">
      <div class="cat-header d-flex justify-content-between align-items-center">
          <h2><%= category.name %></h2> <%= link_to categories_path(category) do %>
            See more <i class="fa-solid fa-chevron-right"></i>
          <% end %>
      </div>
    </div>
    <div class="col-md-12 categories-contentinfo">
      <div class="cate-info">
          <div class="carousel-will" data-controller='carousel-will' data-carousel-will-length-value='<%=activities.length%>'>
            <div class="inner" data-carousel-will-target='inner'>
                <% activities.each_with_index do |activity, i| %>
                  <div class="carousel-will-item d-none" >
                    <img src="https://hips.hearstapps.com/hmg-prod/images/beautiful-smooth-haired-red-cat-lies-on-the-sofa-royalty-free-image-1678488026.jpg?crop=0.88847xw:1xh;center,top&resize=1200:*", alt="photo of <%= activity.title %>" style="width: 180px">
                    <%= link_to activity.title, activity_path(activity) %>
                  </div>
                  <div class="activity-card carousel-will-item h-100" style='left: <%= i * 100%>%' data-carousel-will-target='item'>
                    <div class="card-inner">
                        <div class="image-box">
                          <img src="https://res.cloudinary.com/drdreto8e/image/upload/c_fill/v1/production/roqtndlhb07m0w1kgg55sgemwo6o">

                          <%= link_to categories_path(category), class: "link-btn btn-heart" do %>
                            <span><i class="fa-regular fa-heart"></i></span>
                          <% end %>
                          <%= link_to categories_path(category), class: "link-btn btn-checkview" do %>
                            <span><i class="fa-regular fa-user-check"></i></span>
                          <% end %>
                          <%= link_to categories_path(category), class: "link-btn btn-subnav" do %>
                            <span><i class="fa-solid fa-ellipsis-vertical"></i></span>
                          <% end %>

                        </div>
                        <div class="text-box p-3">
                          <div class="header">
                            <h3><%= link_to activity.title, activity_path(activity) %></h3>
                            <% if user_signed_in? %>
                              <span><%= activity.distance_to([current_user.latitude, current_user.longitude]).round(1) %> mi</span>
                            <% end %>
                          </div>
                          <p><%= activity.description%></p>
                        </div>
                    </div>
                  </div>
                <%end%>
            </div>
            <button class='left' type='text' data-action='click->carousel-will#moveLeft'>Left</button>
            <button class='right'type='text' data-action='click->carousel-will#moveRight'>Right</button>
          </div>
      </div>
    </div>
  </div>
</div>
