<div class="activity-modal landing-model" data-landingmodel-target='modal'>
    <div class="model-body container">
      <div class="row">
        <div class="col-12">
          <div class="model-header  mb-3 row">
            <div class="col-12 pt-4 pb-2">
                <%= image_tag("hero_header_logo.png", class: "landing_logo", :style => "height: 50px", :alt => "hero logo") %>
                <p class="text-center text-justify fs-4 mt-2">Be a hero to your child.</p>
              </div>
              <div class="col-12 pt-2 pb-3">
                <%= image_tag("animation.gif", class: "landing_icon", :style => "height: 250px", :alt => "hero logo") %>
              </div>
          </div>
        </div>
        <div class="col-12">
          <div class="model-content">
            <h1>Find great activities
            <br>
              Be your child’s hero 🦸‍♂️ </h1>
          </div>
        </div>
        <div class="col-12">
          <div class="model-footer mt-3">
            <button class="getstart  btn btn-primary" data-action='click->landingmodel#collapse'>
              Get Started
            </button>
          </div>
        </div>
      </div>
       <%= image_tag("landing-trust.png", class: "landing_bottom", :style => "height: 50px", :alt => "hero logo") %>
    </div>
</div>
