<div class="container">
  <div class="row">
    <% categories.each do |category| %>
      <div class="category-card col-md-6 col-6">
        <%= link_to category_path(category) do %>
          <div class="card h-100">
            <div class="card-img">
              <%= image_tag "#{category.name}.jpg", class: "card-img" %>
            </div>
            <div class="card-body">
              <h3><%= category.name %></h3>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
</div>
